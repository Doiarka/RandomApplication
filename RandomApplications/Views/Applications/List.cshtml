@model IEnumerable<BaseApplication>

@{
    ViewBag.Title = "Applications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Список заявок</h2>

<p>
    @Html.ActionLink("Создать заявку", "Create")
</p>

<table class="table">
    <tr>
        <th>
            Название
        </th>
        <th>
            Описание
        </th>
        <th>
            Статус
        </th>
        <th>
            Дата изменения
        </th>
        <th></th>
    </tr>
    @foreach (var app in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(appsItem => app.Title, new { htmlAttributes = new { @class = "col-md-12" } })
            </td>
            <td>
                @Html.DisplayFor(appsItem => app.Description, new { htmlAttributes = new { @class = "col-md-12" } })
            </td>
            <td>
                @Html.DisplayFor(appsItem => app.Status, new { htmlAttributes = new { @class = "col-md-6" } })
            </td>
            <td>
                @Html.DisplayFor(appsItem => app.DateModify, new { htmlAttributes = new { @class = "col-md-6" } })
            </td>
            <td>
                @Html.ActionLink("Подробно", "Details", new { id = app.Id }) |
                @Html.ActionLink("Изменить", "Edit", new { id = app.Id })
                <!--@Html.ActionLink("Удалить", "Delete", new { id = app.Id })-->
            </td>
        </tr>
    }

</table>
